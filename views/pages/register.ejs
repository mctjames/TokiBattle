<html lang="en">
	<head> 
			<meta charset="utf-8">
      <script src="js/script.js"></script>
			<link rel="stylesheet" href="/stylesheets/register.css" type="text/css" media="all">

	</head>
	<body>

<form action="/addUser" onsubmit="return check()" method="POST">
    <div class="container">
      <h1>Register</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>
      <label for="email"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>
  
      <label for="psw"><b>Password</b></label>
      <input type="password" id="psw" value="" placeholder="Enter Password" name="psw" required>
  
      <label for="psw-repeat"><b>Repeat Password</b></label>
      <input type="password" id="psw-repeat" value="" placeholder="Repeat Password" name="psw-repeat" required>
      <hr>
  
      <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

      <div id="failed">
          <% if (typeof status !== 'undefined') { %>
            <% if (status == 'Username taken') { %>
              <p><%= status %></p>
            <% } %>
          <% } %>
      </div>

      <button type="submit" class="registerbtn">Register</button>
    </div>
    

    <div class="container signin">
      <p>Already have an account? <a href="#">Sign in</a>.</p>
    </div>
  </form>
  </body>
  </html>
